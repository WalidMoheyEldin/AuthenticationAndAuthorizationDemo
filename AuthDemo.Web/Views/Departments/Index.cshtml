@model IEnumerable<AuthDemo.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<p>
    @if (User.HasClaim(c => c.Value == "Create Departments"))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (User.HasClaim(c => c.Value == "Update Departments"))
                {
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                }
                @if (User.HasClaim(c => c.Value == "Read Departments"))
                {
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                }
                @if (User.HasClaim(c => c.Value == "Delete Departments"))
                {
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }

            </td>
        </tr>
}
    </tbody>
</table>
